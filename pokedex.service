[Unit]
Description=Fullstack Pokedex

[Service]
ExecStart=~/full-stack-open-pokedex/app.js
Restart=always
User=nobody

# Note Debian/Ubuntu uses 'nogroup', RHEL/Fedora uses 'nobody'
Group=nogroup
Environment=PATH=/usr/bin:/usr/local/bin
Environment=NODE_ENV=production
WorkingDirectory=/var/www/pokedex

[Install]
WantedBy=multi-user.target
